{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "preserveConstEnums": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/ts/**/*",
    "./__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
