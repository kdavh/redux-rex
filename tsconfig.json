{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "preserveConstEnums": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/ts/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
